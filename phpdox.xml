<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://xml.phpdox.net/config" silent="false">
    <project name="generic-project" source="." workdir="${basedir}/../../../build/api/xml">
        <collector publiconly="false">
            <include mask="*.php" />
            <exclude mask="build" />
            <exclude mask="vendor" />
        </collector>

        <generator output="${basedir}/../../../build/api">
            <enrich base="logs">
                <source type="build" />

                <source type="phploc">
                    <file name="phploc.xml" />
                </source>

                <source type="checkstyle">
                    <file name="pmd.xml" />
                </source>

                <source type="pmd">
                    <file name="pmd.xml" />
                </source>

                <source type="phpcs">
                    <file name="checkstyle.xml" />
                </source>
            </enrich>

            <build engine="html" enabled="true" />
        </generator>
    </project>
</phpdox>
